@using AutomobilePlantContracts.ViewModels
@model List<WarehouseViewModel>
@{ ViewData["Title"] = "Home Page"; }

<h1>Склады</h1>

<hr />
<div>
    @{ if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3> return;
        }          
        <table class="table">
            <thead>
                <tr>
                    <th style="visibility: collapse;">
                        Id
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        ФИО ответственного
                    </th>
                    <th>
                        Дата создания
                    </th>
                    <th>
                        <a style="color: #1E90FF;" asp-action="CreateOrUpdate">Создать склад</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="visibility: collapse;">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WarehouseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreate)
                        </td>
                        <td>
                            <a style="color: #32CD32;" asp-action="CreateOrUpdate" asp-route-id="@item.Id">Изменить</a> |
                            <a style="color: #B22222;" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table> }
</div>