@using AutomobilePlantContracts.ViewModels
@model (List<MessageInfoViewModel> list, int numbOfPages, int page)
@{
    ViewData["Title"] = "MessageInfo";
}
<div class="text-center">
    <h1 class="display-4">Письма</h1>
</div>
<div class="text-center">
    @{
        if (Model.list == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Отправитель
                    </th>
                    <th>
                        Дата письма
                    </th>
                    <th>
                        Заголовок
                    </th>
                    <th>
                        Текст
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.list)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SenderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateDelivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Body)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div class="text-center">
    @{ if ((Model.page - 1) >= 1)
        {
            <a style="margin-right: 20px;" asp-action="MessageInfo" asp-route-page="@(Model.page-1)">Назад</a>
        }
        for (int i = 1; i <= Model.numbOfPages; i++ )
        {
            <a asp-action="MessageInfo" asp-route-page="@(i)">@(i)</a>
        }     
        if (Model.page < Model.numbOfPages)
        {
            <a style="margin-left: 20px;" asp-action="MessageInfo" asp-route-page="@(Model.page+1)">Далее</a> }
    }
</div>